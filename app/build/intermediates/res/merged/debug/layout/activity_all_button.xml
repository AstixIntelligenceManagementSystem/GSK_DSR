<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" 
    android:orientation="vertical">



 
 <LinearLayout
      android:id="@+id/ll_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
  		android:padding="5dp"
     android:gravity="left|center"
     android:weightSum="1"
       android:layout_alignParentTop="true"
      android:background="@drawable/custom_header"
     android:orientation="horizontal">
 
 <ImageView 
     android:id="@+id/img_side_popUp"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_weight="0.1"
     android:visibility="invisible"
      android:src="@drawable/ic_action"/>
      

            <TextView
               android:id="@+id/txtVw_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
               android:layout_weight="0.8"
                android:background="@null"
                 android:text="Dashboard"
               
               android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
               
                android:textColor="@android:color/white"
                android:textSize="20sp" 
                android:textStyle="bold"/>
            
             
            
             
        <ImageView 
            android:id="@+id/img_logout"
     android:layout_width="0dp"
     android:layout_height="40dp"
     android:layout_weight="0.1"
     android:visibility="visible"
     android:src="@drawable/logout"/>
        
 </LinearLayout>
 
 <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:weightSum="3">
 <LinearLayout
    
        android:layout_width="fill_parent"
        android:layout_height="0dp"
     
  	android:layout_weight="1"
     
     android:weightSum="2"
 
     android:orientation="horizontal">
      
  <Button
        android:id="@+id/btn_eLearning"
        android:layout_width="0dp"
     android:layout_margin="1dp"
        android:layout_height="match_parent"
        android:text="E-LEARNING"
        android:background="@drawable/custom_button_sky"
        android:textColor="#fff"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="15sp"
      
        android:drawableTop="@drawable/e_learning" 
        />
  <ImageView 
      android:layout_width="0dp"
      android:layout_height="match_parent"
       android:layout_margin="1dp"
       
      android:layout_weight="1"
      android:background="@drawable/home"/>
  
 
    </LinearLayout>
     <LinearLayout
    
        android:layout_width="fill_parent"
        android:layout_height="0dp"
     
  	android:layout_weight="1"
     
     android:weightSum="2"
 
     android:orientation="horizontal">
      
   <ImageView 
      android:layout_width="0dp"
      android:layout_height="match_parent"
       android:layout_margin="1dp"
      android:layout_weight="1"
      android:background="@drawable/sops1"/>
  
   <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
       android:layout_margin="1dp"
        android:layout_height="match_parent"
        android:text="SOPS"
           android:layout_weight="1"
        android:background="@drawable/custom_button_blue"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="15sp"
    
        android:drawableTop="@drawable/sops_icon" 
        />
  
   
    </LinearLayout>
     <LinearLayout
    
        android:layout_width="fill_parent"
        android:layout_height="0dp"
     
  	android:layout_weight="1"
     
     android:weightSum="2"
 
     android:orientation="horizontal">
      
  <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
         android:layout_margin="1dp"
        android:layout_height="match_parent"
        android:text=""
        android:background="@drawable/custom_button_gray"
        android:textColor="#fff"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="15sp"
        android:enabled="false"
       
        />
  
  <!--  android:drawableTop="@drawable/assessmen_icon"  -->
  <ImageView 
      android:layout_width="0dp"
      android:layout_height="match_parent"
       android:layout_margin="1dp"
      android:layout_weight="1"
      android:background="@drawable/assesment"/>
 
    </LinearLayout>
    
 
 
   
    

</LinearLayout>

</LinearLayout>

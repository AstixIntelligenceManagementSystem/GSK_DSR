<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#686868"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:orientation="vertical"
          android:background="@drawable/alert_text_background"
        android:gravity="center">
      <ImageView
            android:id="@+id/mainImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
             android:src="@drawable/sidemenu_logo" 
           
            />
      </LinearLayout>
      
    
     <Button
	            android:id="@+id/btnSubmit"
	            android:layout_width="220dp"
	            android:layout_height="wrap_content"
	            android:background="@drawable/alert_text_background"
	            android:textColor="#BCBCBC"
	            android:gravity="left|center_vertical"
	            android:drawableLeft="@drawable/upload_icon"
	            android:textSize="14sp"
	            android:text="Upload Data" />
         
    
	     <Button
	            android:id="@+id/img_Dashboard"
	            android:layout_width="220dp"
	            android:layout_height="wrap_content"
	            android:background="@drawable/alert_text_background"
	            android:textColor="#BCBCBC"
	         android:gravity="left|center_vertical"
	         android:drawableLeft="@drawable/home_icon"
	           android:textSize="14sp"
	            android:text="Dashboard" />
         
        
        
        <Button android:id="@+id/butn_eLearning"
          android:layout_width="220dp"
     android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
         android:textColor="#BCBCBC"
     android:text="E-Learning"
     
	 android:gravity="left|center_vertical"
         android:drawableLeft="@drawable/e_learning"
           android:textSize="14sp"/>

      <Button
     android:id="@+id/btn_newLink"
      android:layout_width="220dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#BCBCBC"
        android:gravity="left|center_vertical"
         android:drawableLeft="@drawable/sops_icon"
           android:textSize="14sp"
     android:text="New Link"
    android:visibility="gone"
   
      />

     <Button
        android:id="@+id/btnSalesSummary"
       android:layout_width="220dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#BCBCBC"
        android:gravity="left|center_vertical"
         android:drawableLeft="@drawable/assessmen_icon"
           android:textSize="14sp"
            android:visibility="gone"
        android:text="Assesment" />
     
      <Button
        android:id="@+id/btnVersion"
       android:layout_width="220dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#BCBCBC"
        android:gravity="left|center_vertical"
         android:drawableLeft="@drawable/reports_icon"
           android:textSize="14sp"
            android:visibility="gone"
        android:text="Reports" />
    
  <Button
        android:id="@+id/btnAdmin"
       android:layout_width="220dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#BCBCBC"
        android:gravity="left|center_vertical"
         android:drawableLeft="@drawable/admin_icon"
           android:textSize="14sp"
            android:visibility="gone"
        android:text="Admin" />
</LinearLayout>

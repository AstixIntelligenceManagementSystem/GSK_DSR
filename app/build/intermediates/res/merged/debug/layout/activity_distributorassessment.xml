<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#F9F9F9" 
    >
    
 <RelativeLayout
      android:id="@+id/ll_header"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
     
  		android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
       android:layout_alignParentTop="true"
      android:background="@drawable/custom_header_distributor"
     android:orientation="horizontal">
 

            <TextView
               android:id="@+id/txtVw_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             android:layout_centerInParent="true"
                 android:text="Assessment"
               
               android:layout_marginLeft="5dp"
              
               
                android:textColor="@android:color/white"
                android:textSize="20sp" 
                android:textStyle="bold"/>
            
             <ImageView
                 android:id="@+id/img_home"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:src="@drawable/dashboard_home"/>
            
             
      
 </RelativeLayout>
 <ScrollView 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:clipToPadding="false"
      android:layout_below="@+id/ll_header"
      android:layout_marginTop="5dp"
     android:scrollbarStyle="outsideOverlay">
 <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     
     android:orientation="vertical">
   <LinearLayout 
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       android:paddingTop="3dp"
       android:weightSum="2"
      
       android:paddingBottom="3dp">
       <TextView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textColor="#000000"
           android:text="Distributor Name"/>
       <EditText 
           android:id="@+id/edt_DistributorName"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/ed_bckg"
           android:digits="@string/only_character_Space_no"
           android:textColor="#000000"/>
   </LinearLayout>
   <LinearLayout 
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       android:background="@drawable/form_background"
       android:paddingTop="3dp"
       android:weightSum="2"
      
       android:paddingBottom="3dp">
       <TextView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textColor="#000000"
           android:text="Assessor Name 1"/>
       <EditText 
           android:id="@+id/edt_AssessorName1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:digits="@string/only_characteandSpace"
           android:background="@drawable/ed_bckg"
           android:textColor="#000000"/>
   </LinearLayout>
   <LinearLayout 
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       android:paddingTop="3dp"
       android:weightSum="2"
      
       android:paddingBottom="3dp">
       <TextView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textColor="#000000"
           android:text="Assessor Name 2"/>
       <EditText 
           android:id="@+id/edt_AssessorName2"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:digits="@string/only_characteandSpace"
           android:background="@drawable/ed_bckg"
           android:textColor="#000000"/>
   </LinearLayout>
   <LinearLayout 
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       android:paddingTop="3dp"
       android:weightSum="2"
        android:background="@drawable/form_background"
       android:paddingBottom="3dp">
       <TextView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textColor="#000000"
           android:text="Zone"/>
       <EditText 
           android:id="@+id/edt_Zone"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/ed_bckg"
            android:digits="@string/only_character_Space_no_slash"
           android:textColor="#000000"/>
   </LinearLayout>

    <LinearLayout 
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       android:paddingTop="3dp"
       android:weightSum="2"
     
       android:paddingBottom="3dp">
       <TextView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textColor="#000000"
           android:text="Territory"/>
       <EditText 
           android:id="@+id/edt_Territory"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/ed_bckg"
            android:digits="@string/only_character_Space_no_slash"
           android:textColor="#000000"/>
   </LinearLayout>

   <LinearLayout 
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       android:paddingTop="3dp"
       android:weightSum="2"
        android:background="@drawable/form_background"
       android:paddingBottom="3dp">
       <TextView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textColor="#000000"
           android:text="Town"/>
       <EditText 
           android:id="@+id/edt_Town"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/ed_bckg"
            android:digits="@string/only_character_Space_no_slash"
           android:textColor="#000000"/>
   </LinearLayout>
</LinearLayout>
</ScrollView>
<LinearLayout 
    android:id="@+id/ll_next"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/custom_button">
    
    <TextView 
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Next"
        
        android:paddingRight="16dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:drawableRight="@drawable/next"
        />
</LinearLayout>
</RelativeLayout>
